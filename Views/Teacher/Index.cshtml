
@model IEnumerable<MVC.Models.Teacher>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-8">
            <h2 class="text-primary">Teacher List</h2>
        </div>
       <div class="col-2">
           <a class="btn btn-primary" asp-controller="Teacher" asp-action="Create" >Create new table</a>

       </div>
       <div class="col-6">
           <form class="d-flex" style="user-select: auto;" asp-controller="Teacher" asp-action="Index">
        <input class="form-control me-sm-2" type="Search" placeholder="Search" style="user-select: auto;"name="searchString" >
        <button class="btn btn-secondary my-2 my-sm-0" type="submit" style="user-select: auto;" value="Filter">Search</button>
      </form>
       </div>
      
    </div>
  
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Teacher Name</th>
                    <th>Subject</th>
                    <th>JoiningDate</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj1 in Model)
                {
                    <tr>
                        <td width="50%">@obj1.Teacher_Name</td>
                        <td>@obj1.subject</td>
                        <td>@obj1.JoiningDate.Date
                    
                        </td>
                        <td>
                           <a asp-controller="Teacher" asp-action="Edit" asp-route-Teacherid="@obj1.ID" class="btn btn-primary">Edit</a>
                            <a asp-controller="Teacher" asp-action="Delete" asp-route-Teacherid="@obj1.ID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Teacher details.</p>
    }
</div>